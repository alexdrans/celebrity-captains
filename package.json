{
  "name": "celebrity-captains",
  "version": "0.0.0",
  "description": "The year is 2057 and ship captains are now considered celebrities throughout the world",
  "main": "index.js",
  "repository": "changeme",
  "author": "Alexander Dransfield",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.11.0",
    "graphql": "^14.6.0",
    "pg": "^7.18.2"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon dist/index.js",
    "build": "rimraf dist && tsc",
    "watch": "rimraf dist && tsc -w",
    "codegen": "graphql-codegen",
    "migrate": "node-pg-migrate",
    "eslint": "eslint src/**/*.ts",
    "up": "docker-compose up --build",
    "down": "docker-compose down",
    "dcrun": "docker-compose run"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.12.2",
    "@graphql-codegen/typescript": "^1.12.2",
    "@types/express": "^4.17.3",
    "@types/pg": "^7.14.1",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "node-pg-migrate": "^4.2.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick && yarn eslint"
    }
  }
